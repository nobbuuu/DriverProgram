    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/color_divider"
        app:layout_constraintTop_toBottomOf="@+id/takekm_tv"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_53"
