<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@drawable/dialog_bg_white_5dp">

        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_13"
            android:text="抢单中"
            android:textColor="@color/maas_text_primary"
            android:textSize="@dimen/sp_18"
            style="@style/text_bold_font_family"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:background="@color/line_color_AAAAAA"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_189"
            android:orientation="vertical"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_tips_image"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_80"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/bg_time_second"/>

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="@dimen/sp_20"
                    android:textColor="@color/text_white"
                    android:text="0s" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正在进行匹配"
                android:layout_marginTop="@dimen/dp_18"
                android:textSize="@dimen/sp_18"
                android:textColor="@color/maas_text_primary"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
