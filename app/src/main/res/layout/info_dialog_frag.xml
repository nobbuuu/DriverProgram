<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/dp_20"
    android:paddingHorizontal="@dimen/dp_14"
    android:layout_gravity="center"
    android:background="@drawable/bg_round_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/dp_4"
        android:layout_centerHorizontal="true"
        android:text="@string/app_name"
        android:textSize="@dimen/sp_16" />

    <ImageView
        android:visibility="invisible"
        android:id="@+id/iv_close_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_12"
        android:layout_alignParentEnd="true"
        android:src="@mipmap/ic_close_gray"
        android:contentDescription="关闭" />

    <View
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginHorizontal="@dimen/dp_14"
        android:layout_below="@+id/tv_message"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:visibility="gone"
            android:id="@+id/btn_negative"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_bg_light_blue"
            android:paddingHorizontal="@dimen/dp_40"
            android:paddingVertical="@dimen/dp_10"
            android:layout_marginHorizontal="@dimen/dp_3"
            android:gravity="center"
            android:text="@android:string/cancel"
            android:textStyle="bold"
            style="@style/text_bold_font_family"
            android:textColor="@color/maas_text_deep_gray"
            android:textSize="@dimen/sp_16" />

        <View
            android:visibility="gone"
            android:layout_width="1dp"
            android:layout_height="match_parent" />

        <TextView
            android:visibility="gone"
            android:id="@+id/btn_positive"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_blue"
            android:layout_marginHorizontal="@dimen/dp_3"
            android:paddingHorizontal="@dimen/dp_40"
            android:paddingVertical="@dimen/dp_10"
            android:gravity="center"
            android:text="@android:string/ok"
            android:textColor="@color/white"
            android:textStyle="bold"
            style="@style/text_bold_font_family"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:visibility="visible"
            android:id="@+id/btn_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/dp_150"
            android:background="@drawable/bg_blue"
            android:layout_marginHorizontal="@dimen/dp_3"
            android:paddingHorizontal="@dimen/dp_40"
            android:paddingVertical="@dimen/dp_10"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:textStyle="bold"
            style="@style/text_bold_font_family"
            android:textSize="@dimen/sp_16" />


    </LinearLayout>

    </RelativeLayout>

</LinearLayout>
