<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/dialog_bg_white_5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">

            <TextView
                android:id="@+id/header_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="抢单成功"
                android:textSize="@dimen/sp_18"
                style="@style/text_bold_font_family"
                android:textColor="@color/maas_text_primary"/>

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_15"
                android:src="@mipmap/ic_close_gray" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:background="@color/line_color_AAAAAA"/>

        <ImageView
            android:id="@+id/iv_tips_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_15"
            android:src="@mipmap/ic_grab_order_success"/>

        <TextView
            android:id="@+id/tv_tips_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正在计算抢单结果"
            android:textSize="@dimen/sp_18"
            android:visibility="gone"
            android:textColor="@color/maas_text_primary"/>

        <TextView
            android:id="@+id/tv_close_rest_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_marginBottom="@dimen/dp_30"
            android:text="3s"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/maas_text_primary"/>

    </LinearLayout>
</RelativeLayout>
