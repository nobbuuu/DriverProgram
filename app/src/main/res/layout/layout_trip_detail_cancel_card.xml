<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_order_cancel_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/bg_order_detail_info_card_small"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15"
    android:paddingTop="@dimen/dp_12"
    android:paddingBottom="@dimen/dp_15"
    android:orientation="vertical"
    android:clickable="true"
    android:visibility="visible">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_10">

        <TextView
            android:id="@+id/tv_order_cancel_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/maas_text_gray"
            android:text="取消原因"/>

        <TextView
            android:id="@+id/tv_order_cancel_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:layout_toRightOf="@id/tv_order_cancel_temp"
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="@color/maas_text_primary"
            android:lines="1"
            android:ellipsize="end"
            android:gravity="right"
            android:text="乘客取消（临时有事）"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_10">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/maas_text_gray"
            android:text="订单类型"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_order_cancel_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/maas_text_primary"
            android:text="xxxx"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_10">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/maas_text_gray"
            android:text="订单编号"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_order_cancel_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/maas_text_primary"
            android:text="xxxx"/>

    </LinearLayout>
</LinearLayout>

