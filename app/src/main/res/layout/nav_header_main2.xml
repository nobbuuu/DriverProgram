<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@mipmap/main_nav_top_bg"
    android:paddingTop="@dimen/dp_17"
    android:paddingBottom="@dimen/dp_19"
    android:gravity="center">

    <View
        android:id="@+id/nav_needOffsetView"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/main_nav_header_bg">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_user_photo"
            android:layout_width="@dimen/dp_47"
            android:layout_height="@dimen/dp_47"
            android:layout_gravity="center"
            android:src="@mipmap/main_nav_avatar"
            app:srcCompat="@mipmap/main_nav_avatar" />

    </FrameLayout>

    <TextView
        android:id="@+id/work_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="准许证号"
        android:textSize="@dimen/sp_22"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/dp_5"
        style="@style/text_bold_font_family"/>

    <TextView
        android:id="@+id/driver_real_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:text="姓名"
        style="@style/text_bold_font_family"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16" />
</LinearLayout>
