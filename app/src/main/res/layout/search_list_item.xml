<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/tv_order_book"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/rl_header"
    android:paddingTop="@dimen/dp_8"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/search_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_order_book_header"
        android:layout_alignParentStart="true"
        android:drawableLeft="@mipmap/ic_address"
        android:drawablePadding="@dimen/dp_12"
        android:text="深圳市儿童医院" />

    <TextView
        android:id="@+id/search_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_item_title"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/dp_26"
        android:textColor="@color/maas_text_gray"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginBottom="@dimen/dp_8"
        android:text="福田区269号" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/maas_divider"
        android:layout_below="@id/search_item_text"/>
</RelativeLayout>

